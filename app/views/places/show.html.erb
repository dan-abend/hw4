<div class="container-fluid">
<h1 class="pt-7"><%= @place.name %></h1>

<p>
<div class="row">
  <div class="col-sm-3">
    <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-outline-primary btn-sm">New Post</a>
  </div>
</div>
</p>

<% if @current_user %>

<p>

<div class="row">
  <% for post in @place.posts.where({user_id: @current_user.id}) %>
  <div class="col-sm-3">
      <h5 class=text-info><%= post.title %></h5>
      <h6><%= post.posted_on %></h6>
 
      <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
      <% else %>
        <img src="<%= post.image %>" class="img-fluid">
      <% end %>

      <p><%= post.description %></p>
    </div>
    <% end %>
</div>
</p>

<p>
<div class="row">
<div class="col-sm-3">
  <a href="/places" class="btn btn-info">Back to All Places</a>
</div>
</div>
</p>


<% end %>
</div>